import os

def solve():
    # 1. Read the input automatically
    script_dir = os.path.dirname(os.path.abspath(__file__))
    base_dir = os.path.dirname(script_dir)
    input_path = os.path.join(base_dir, 'inputs', 'input2.txt')

    with open(input_path, 'r') as f:
        text = f.read().strip()

    print(f"Original: {text}")

    # 2. Reverse the string
    # Slicing [::-1] reverses a string in Python
    reversed_text = text[::-1]
    print(f"Reversed: {reversed_text}")

    # 3. Remove every 3rd character
    # We keep characters where the (index + 1) is NOT divisible by 3
    filtered_text = ""
    for i, char in enumerate(reversed_text):
        if (i + 1) % 3 != 0:
            filtered_text += char
            
    print(f"Filtered (no 3rds): {filtered_text}")

    # 4. Shift ASCII +2
    # ord(c) gets the number, chr(n) turns it back to a letter
    shifted_text = ""
    for char in filtered_text:
        shifted_char = chr(ord(char) + 2)
        shifted_text += shifted_char
        
    print(f"Shifted (+2): {shifted_text}")

    # 5. Count Vowels
    # Standard English vowels: a, e, i, o, u (and capitals)
    vowels = "aeiouAEIOU"
    clue_2 = sum(1 for char in shifted_text if char in vowels)

    print(f"Clue 2: {clue_2}")
    return clue_2

if __name__ == "__main__":
    solve()